        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnDisplayNotification2"
        android:text="DISPLAY NOTIFICATION 2"
        android:layout_margin="20sp"
        />


</LinearLayout>